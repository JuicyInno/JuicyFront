{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "outDir": "dist",
    "declaration": true,
    "emitDeclarationOnly": true,
    "moduleResolution": "node",
    "strict": true,
    "removeComments": true,
    "allowJs": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "plugins": [
      {
        "name": "typescript-styled-plugin",
        "tags": ["css", ".css", "styled", "styles"]
      }
    ],
  },
  "files": ["custom.d.ts"],
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", "**/*.spec.*", "**/*.stories.*", "**/*.mocks.*"]
}
